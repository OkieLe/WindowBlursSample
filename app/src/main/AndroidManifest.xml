<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlursSample">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BlursSample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".BackgroundBlurDemo"
            android:label="singleTask"
            android:exported="false"
            android:theme="@style/Theme.BackgroundBlur.Demo" />
        <activity android:name=".BlurBehindDemo"
            android:label="singleTask"
            android:exported="false"
            android:theme="@style/Theme.BlurBehind.Demo" />
        <activity android:name=".DimBehindDemo"
            android:label="singleTask"
            android:exported="false"
            android:theme="@style/Theme.DimBehind.Demo" />
    </application>

</manifest>
